{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@root/*": ["../*"],
      "@shared/*": ["../prj_shared/*"],
      "@chromane/*": ["../node_modules/chromane/*"]
    },
    "target": "es2021",
    "lib": ["DOM", "ES2015.Core", "DOM.Iterable", "ES2015.Collection", "ES2015.Iterable", "ES2015", "ES2021.String"],
    "module": "ES6",
    "outDir": "./dist_ts",
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["../prj_extension/src/**/*", "types.d.ts", "../node_modules/@types", "../shared/**/*", "../common/**/*"],
  "exclude": ["dist", "../temp"]
}
